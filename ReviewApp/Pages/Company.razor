@inherits CompanyBase

@page "/companies"

<h1>Companies</h1>

<p>List of registered companies</p>

<button class="btn btn-primary add-button" @onclick="ShowAddModal">Add Company</button>

@if (HasError)
{
    <div class="alert alert-danger error-message" role="alert">
        @ErrorMessage
    </div>    
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>-</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Companies)
                    {
                        <tr>
                            <td>@company.Id</td>
                            <td>@company.Name</td>
                            <td>@company.Description</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>

@if (DisplayAddModal)
{
    <EditForm Model="@CompanyModel" >
        <DataAnnotationsValidator/>
        <ValidationSummary/>
        <div class="form-row">
            <div class="form-group col-6">
                <label for="name">Name</label>
                <input type="text"  class="form-control" id="name" placeholder="Name" @bind="CompanyModel.Name"/>
            </div>
            <div class="form-group col-6">
                <label for="description">Description</label>
                <input type="text"  class="form-control" id="description" placeholder="Description" @bind="CompanyModel.Description"/>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Add" />
    </EditForm>    
}

